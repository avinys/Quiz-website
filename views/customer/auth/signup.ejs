<%- include('../../shared/includes/head', {pageTitle: 'Signup'}) %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1>Create New Account</h1>
        <% if(inputData.errorMessage) { %>
            <section class="alert">
                <h2>Invalid Input</h2>
                <p><%= inputData.errorMessage %></p>
            </section>
        <% } %>
        <form action="/signup" method="POST" class="auth">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" >
            <div>
                <label for="fullname">Full name</label>
                <input type="text" id="fullname" name="fullname" value="<%= inputData.fullname %>" required>
            </div>
            <div>
                <label for="username">Username</label>
                <input type="username" id="username" name="username" value="<%= inputData.username %>" required>
            </div>
            <div>
                <label for="email">E-mail</label>
                <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
            </div>
            <div>
                <label for="confirm-email">Confirm Email</label>
                <input type="email" id="confirm-email" name="confirm-email" value="<%= inputData.confirmEmail %>" required>
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" minlength="8" value="<%= inputData.password %>" required>
            </div>
            <hr>
            
            <div>
                <label for="role">Role</label>
                <select name="role" id="role" required>
                    <option value="teacher">Teacher</option>
                    <option value="student">Student</option>
                </select>
            </div>
            <button class="btn">Create Account</button>
            <p id="switch-form"><a href="/login">Login instead</a></p>
        </form>
    </main>
<%- include('../../shared/includes/footer') %>